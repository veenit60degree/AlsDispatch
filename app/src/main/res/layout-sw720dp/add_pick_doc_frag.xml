<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/addPickLay"
    >



    <RelativeLayout
        android:id="@+id/actionBarAddPickDetail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/actionbar_bg"
        >




        <RelativeLayout
            android:id="@+id/backDetailAddPickLay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/logout_selector"
            >



            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:src="@drawable/back_btn"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_toRightOf="@+id/backBtn"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                />





        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Pickup Documents"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            />


    </RelativeLayout>



<RelativeLayout
    android:id="@+id/commercialInvoiceLay"
    android:layout_width="match_parent"
    android:layout_height="55dp"
android:visibility="gone"

    >

    <TextView
