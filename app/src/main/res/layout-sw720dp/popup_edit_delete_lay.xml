<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainPopLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >



    <RelativeLayout
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_default"
        android:layout_marginRight="@dimen/view_height_60"
        android:layout_marginLeft="@dimen/view_height_60"
        android:paddingBottom="@dimen/margin_20"

        >


        <com.als.dispatchNew.customfont.textview.PoppinsSemiBoldTextView
            android:id="@+id/changeTitleView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height_50"
            android:gravity="center"
            android:text="Confirmation"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_26"
            android:layout_marginTop="@dimen/margin_25"
            android:textColor="@color/black"
            />


        <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
            android:id="@+id/titleDescView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Do you really want to confirm the Load Delivery?"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_19"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/margin_22"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black_hover"
            android:layout_below="@+id/changeTitleView"
            />

        <LinearLayout
            android:id="@+id/btnLinLay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height_45"
            android:layout_marginTop="@dimen/view_height_40"
            android:layout_below="@+id/titleDescView"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/view_height_30"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_alignParentRight="true"

            >


            <RelativeLayout
                android:id="@+id/cancelPopupBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:layout_marginRight="@dimen/margin_16"
                >


                <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
                    android:id="@+id/cancelPopupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cancel"
                    android:layout_margin="1dp"
                    android:textColor="@color/blue"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_20"
                    android:background="@color/transparent"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/confirmPopupBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"

                android:layout_marginLeft="@dimen/margin_16"
                >

                <!-- android:background="@drawable/edtittext_border"-->
                <com.als.dispatchNew.customfont.textview.PoppinsSemiBoldTextView
                    android:id="@+id/confirmPopupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Confirm"
                    android:layout_margin="1dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_20"
                    android:background="@color/transparent"

                    />
            </RelativeLayout>




        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
