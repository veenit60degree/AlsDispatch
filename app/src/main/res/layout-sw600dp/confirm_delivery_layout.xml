<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nbackground"
    android:id="@+id/confirmDelMainLay"
    >




    <include
        android:id="@+id/tripActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/action_bar"
        />


<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tripActionBar"
    android:background="@drawable/nbackground"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >


    <android.support.v7.widget.CardView
        android:id="@+id/confirmDelCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_10"
        app:cardElevation="@dimen/margin_short_2"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/margin_17"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_20"
            android:orientation="vertical"

            >


            <LinearLayout
                android:id="@+id/delAddressLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_15"

                >


                <com.als.dispatchNew.customfont.textview.PoppinsSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DeliveredAt"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_19"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    >

                    <com.als.dispatchNew.customfont.radio_btn.PoppinsRegularRadioBtn
                        android:id="@+id/consigneeRadioBtn"
                        android:layout_width="@dimen/view_height_170"
                        android:layout_height="wrap_content"
                        android:text="@string/Consigneeee"
                        android:textSize="@dimen/text_size_17"
                        android:textAllCaps="true"
                        />


                    <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
                        android:id="@+id/consigneeAddTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/gray_text_new"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/yardLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_short_5"
                    >

                    <com.als.dispatchNew.customfont.radio_btn.PoppinsRegularRadioBtn
                        android:id="@+id/yardRadioBtn"
                        android:layout_width="@dimen/view_height_170"
                        android:layout_height="wrap_content"
                        android:text="@string/yard"
                        android:textSize="@dimen/text_size_17"
                        android:textAllCaps="true"
                        />


                    <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
                        android:id="@+id/yardAddTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/gray_text_new"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/wareHouseLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_short_5"
                    >

                    <com.als.dispatchNew.customfont.radio_btn.PoppinsRegularRadioBtn
                        android:id="@+id/wareHouseRadioBtn"
                        android:layout_width="@dimen/view_height_170"
                        android:layout_height="wrap_content"
                        android:text="@string/warehouse"
                        android:textSize="@dimen/text_size_17"
                        android:textAllCaps="true"
                        />


                    <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
                        android:id="@+id/wareHouseAddTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/gray_text_new"
                        />

                </LinearLayout>


                <com.als.dispatchNew.customfont.textview.PoppinsSemiBoldTextView
                    android:id="@+id/otherLoadTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_other_load"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_19"
                    android:layout_marginTop="@dimen/margin_15"

                    />


                <HorizontalScrollView
                    android:id="@+id/otherLoadScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:id="@+id/horizontalContainerLay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_short_5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />

                </HorizontalScrollView>



            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/entryTimeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:minLines="2"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.als.dispatchNew.customfont.edittext.PoppinsRegularEditText
                        android:id="@+id/entryTimeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_short_7"
                        android:paddingBottom="@dimen/margin_short_7"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:textSize="@dimen/text_size_17"
                        android:hint="@string/startDelTime"
                        android:singleLine="true"
                        android:drawableRight="@drawable/clock"
                        android:editable="false"

                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short_6"
                >

                <Button
                    android:id="@+id/exitTimeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:minLines="2"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.als.dispatchNew.customfont.edittext.PoppinsRegularEditText
                        android:id="@+id/exitTimeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_short_7"
                        android:paddingBottom="@dimen/margin_short_7"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:textSize="@dimen/text_size_17"
                        android:hint="@string/endDelTime"
                        android:singleLine="true"
                        android:drawableRight="@drawable/clock"
                        android:editable="false"

                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short_6"
                >

                <Button
                    android:id="@+id/delTimeLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:minLines="2"
                    />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/delTimeInputLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.als.dispatchNew.customfont.edittext.PoppinsRegularEditText
                    android:id="@+id/delTimeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_short_7"
                    android:paddingBottom="@dimen/margin_short_7"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:textSize="@dimen/text_size_17"
                    android:hint="@string/delTime"
                    android:singleLine="true"
                    android:drawableRight="@drawable/back_white"
                    android:editable="false"

                    />
            </android.support.design.widget.TextInputLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/timeReasonLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                >

            <Button
                android:id="@+id/timeReasonBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:minLines="2"
                android:visibility="gone"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/timeReasonInputLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.als.dispatchNew.customfont.edittext.PoppinsRegularEditText
                    android:id="@+id/timeReasonEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_short_7"
                    android:paddingBottom="@dimen/margin_short_7"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:textSize="@dimen/text_size_17"
                    android:hint="@string/delTimeReason"
                    android:singleLine="true"
                    android:drawableRight="@drawable/back_white"

                    />


            </android.support.design.widget.TextInputLayout>

            </RelativeLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                >

                <com.als.dispatchNew.customfont.edittext.PoppinsRegularEditText
                    android:id="@+id/delCommentsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_short_7"
                    android:paddingBottom="@dimen/margin_short_7"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:textSize="@dimen/text_size_17"
                    android:hint="@string/delComments"
                    android:gravity="left|top"
                    android:minLines="2"
                    android:maxLines="5"
                    android:drawableRight="@drawable/back_white"

                    />


            </android.support.design.widget.TextInputLayout>




            <!--    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_line_list"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    />
    -->


            <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uploadDelDocuments"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"
                android:layout_marginTop="20dp"
                android:textAllCaps="true"
                />


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_height_100"
                android:layout_marginTop="5dp"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >


                    <LinearLayout
                        android:id="@+id/addMoreItemsLay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >



                    </LinearLayout>

                    <ImageView
                        android:id="@+id/addMoreImages"
                        android:layout_width="@dimen/view_height_100"
                        android:layout_height="@dimen/view_height_100"
                        android:src="@drawable/add_pluss"
                        />
                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>

    </android.support.v7.widget.CardView>








    <com.als.dispatchNew.customfont.button.CalibriBoldButton
        android:id="@+id/confirmDeliveryBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_55"
        android:text="Confirm Delivery"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/margin_24"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/red_btn_selector"

        android:layout_below="@+id/confirmDelCardView"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/view_height_40"
        android:layout_marginLeft="@dimen/view_height_35"
        android:layout_marginRight="@dimen/view_height_35"
        android:layout_marginBottom="@dimen/margin_20"
        />



    <View
        android:id="@+id/bottomDeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        />




        </RelativeLayout>

</ScrollView>



    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheelPickerConfirmDel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_180"
        android:background="@color/wheel_background_color"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="false"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="@color/wheel_item_color"
        aigestudio:wheel_item_text_size="@dimen/text_size_27"
        aigestudio:wheel_selected_item_text_color="@color/black"
        android:layout_alignParentBottom="true"
        android:visibility="gone"


        />

    <RelativeLayout
        android:id="@+id/wheelPickerDelLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_47"
        android:background="@color/divider_light_grey_line"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_height_180"
        android:visibility="gone"

        >


        <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/SelectJobLoadType"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/greyText"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            />



        <com.als.dispatchNew.customfont.textview.SourceSansProBoldTextView
            android:id="@+id/wheelSelectedDelBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="@string/done"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_19"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_15"

            />





    </RelativeLayout>






</RelativeLayout>