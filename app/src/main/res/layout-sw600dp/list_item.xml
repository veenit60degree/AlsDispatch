<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
        android:id="@+id/loadTypeTxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/jobaceptbtnblue"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/margin_short_8"
        android:paddingRight="@dimen/margin_short_8"
        android:paddingTop="@dimen/margin_short_5"
        android:paddingBottom="@dimen/margin_short_5"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_17"
        />


    <android.support.v7.widget.CardView
        android:id="@+id/tripHistoryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_13"
        android:layout_marginLeft="@dimen/margin_13"
        android:layout_marginBottom="@dimen/margin_13"
        app:cardElevation="@dimen/margin_short_2"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/margin_10"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_15"


            >

            <RelativeLayout
                android:id="@+id/outerlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:id="@+id/container_bar_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_10"

                        >

                        <com.als.dispatchNew.customfont.textview.PoppinsBoldTextView
                            android:id="@+id/container_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorHeadingBlue"
                            android:textSize="@dimen/text_size_20"
                            android:textAllCaps="false"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="0.8"
                            android:text="Trip#: GH2293"
                            />



                        <TextView
                            android:id="@+id/tripDividerTV"
                            android:layout_width="1dp"
                            android:layout_height="@dimen/margin_25"
                            android:background="@color/gray_text"
                            android:layout_gravity="center"/>



                        <com.als.dispatchNew.customfont.textview.PoppinsBoldTextView
                            android:id="@+id/itemLoadTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_20"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="0.8"
                            android:textColor="@color/colorHeadingBlue"
                            android:text="gfgf"
                            android:layout_alignParentRight="true"


                            />

                    </LinearLayout>
                    <View
                        android:id="@+id/divLineDetailView"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_text_transparent"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_below="@+id/container_bar_lay"
                        android:layout_marginRight="@dimen/margin_10"
                        />
                </LinearLayout>


            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_18"
                >

                <ImageView
                    android:id="@+id/locationDotIMV"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:src="@drawable/thumb_on_duty"
                    android:layout_marginTop="@dimen/margin_short_5"
                    android:layout_marginLeft="@dimen/margin_15"
                    />

                <com.als.dispatchNew.customfont.textview.PoppinsBoldTextView
                    android:id="@+id/shiperNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_19"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/locationDotIMV"
                    android:textColor="@color/unselect_button"

                    android:text="@string/Shipper"

                    />

                <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
                    android:id="@+id/shiperNameV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/unselect_button"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_short_3"
                    android:layout_toRightOf="@+id/shiperNameTV"



                    />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short_3"
                android:layout_marginLeft="@dimen/margin_short_2"

                >



                <ImageView
                    android:id="@+id/location_dash"
                    android:layout_width="@dimen/view_height_40"
                    android:layout_height="@dimen/view_height_50"
                    android:src="@drawable/dash_line"

                    />

                <ImageView
                    android:id="@+id/locationImageView"
                    android:layout_width="@dimen/margin_17"
                    android:layout_height="@dimen/margin_17"
                    android:src="@drawable/nlocation"
                    android:layout_toRightOf="@+id/location_dash"
                    android:layout_marginTop="@dimen/margin_short_8"
                    />

                <com.als.dispatchNew.customfont.textview.PoppinsLightTextView
                    android:id="@+id/tripHisDetailTV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/gray_text_new"
                    android:layout_marginLeft="@dimen/margin_short_5"
                    android:layout_marginTop="@dimen/margin_short_7"
                    android:layout_toRightOf="@+id/locationImageView"

                    />
            </RelativeLayout>






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short_5"
                >




                <ImageView
                    android:id="@+id/locationDotIMV2"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:src="@drawable/thumb_off_duty"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_short_6"

                    />



                <com.als.dispatchNew.customfont.textview.PoppinsBoldTextView
                    android:id="@+id/consigneNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_19"

                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/unselect_button"
                    android:layout_toRightOf="@+id/locationDotIMV2"
                    android:text="@string/Consignee"

                    />

                <com.als.dispatchNew.customfont.textview.PoppinsRegularTextView
                    android:id="@+id/consigneeNameTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/unselect_button"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_short_3"

                    android:layout_toRightOf="@+id/consigneNameTV"



                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short_3"
                android:layout_marginLeft="@dimen/view_height_40"

                >





                <ImageView
                    android:id="@+id/locationImageView2"
                    android:layout_width="@dimen/margin_17"
                    android:layout_height="@dimen/margin_17"
                    android:src="@drawable/nlocation"
                    android:layout_marginTop="@dimen/margin_short_8"
                    />



                <com.als.dispatchNew.customfont.textview.GibsonRegularTextView
                    android:id="@+id/itemDetailTV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/gray_text_new"
                    android:layout_marginLeft="@dimen/margin_short_5"
                    android:layout_marginTop="@dimen/margin_short_7"
                    android:layout_toRightOf="@+id/locationImageView2"

                    />


            </RelativeLayout>









            <LinearLayout
                android:id="@+id/layoutbtns"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_55"
                android:layout_below="@+id/container_bar_lay"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_short_8"
                android:visibility="gone"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"

                    >

                    <com.als.dispatchNew.customfont.button.CalibriBoldButton
                        android:id="@+id/isAcceptbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_21"
                        android:background="@drawable/jobaceptbtn"
                        android:text="Accept"


                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"

                    >


                    <com.als.dispatchNew.customfont.button.CalibriBoldButton
                        android:id="@+id/isRejectbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/job_declinebtn"
                        android:textColor="@color/white"
                        android:text="Decline"
                        android:textSize="@dimen/text_size_21"

                        />
                </RelativeLayout>


            </LinearLayout>






            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_text"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_15"
                >

                <com.als.dispatchNew.customfont.textview.PoppinsBoldTextView
                    android:layout_width="@dimen/view_height_130"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_short_7"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/PickupTime"
                    android:textColor="@color/black_hover"
                    android:textStyle="bold"


                    />

                <com.als.dispatchNew.customfont.textview.GibsonRegularTextView
                    android:id="@+id/timeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/margin_17"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/gray_text_new"
                    android:textStyle="bold"


                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short_2"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_15"

                >

                <com.als.dispatchNew.customfont.textview.PoppinsBoldTextView
                    android:layout_width="@dimen/view_height_130"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_short_7"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/DeliveredTime"
                    android:textColor="@color/black_hover"
                    android:textStyle="bold"


                    />

                <com.als.dispatchNew.customfont.textview.GibsonRegularTextView
                    android:id="@+id/deliveryTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/margin_17"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/gray_text_new"
                    android:textStyle="bold"


                    />

            </LinearLayout>






        </LinearLayout>





    </android.support.v7.widget.CardView>


</LinearLayout>