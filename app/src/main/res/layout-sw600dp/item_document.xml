<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/commercialDocccLay"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"


        >

        <TextView
            android:id="@+id/documentTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commercial Invoice"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/addDocumentTV"
            android:layout_alignParentLeft="true"

            />


        <TextView
            android:id="@+id/addDocumentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add \nDocument"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/isUploadedIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/tick_blue"
            android:visibility="gone"
            />

    </RelativeLayout>



</LinearLayout>