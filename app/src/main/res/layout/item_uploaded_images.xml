<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/view_height_90"
    android:layout_height="@dimen/view_height_90"
    android:layout_margin="@dimen/margin_short_5"
    card_view:cardCornerRadius="@dimen/margin_short_4"

    >



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >

                <ImageView
                    android:id="@+id/uploadedImageView"
                    android:layout_width="@dimen/view_height_80"
                    android:layout_height="@dimen/view_height_80"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    />


            </FrameLayout>




</android.support.v7.widget.CardView>